<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasosPedidoActivity">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/floatingSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/menu"
        android:gravity="center"
        android:onClick="nexyStep"
        android:textColor="@color/titulos"
        app:icon="@drawable/ic_baseline_arrow_forward_24"
        app:iconTint="@color/titulos"
        android:text="Siguiente">

    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>


    <ScrollView
        android:id="@+id/svPedidos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:layout_margin="20dp"
                    android:id="@+id/floatingBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/menu"
                    android:gravity="center"
                    android:textColor="@color/titulos"
                    app:icon="@drawable/ic_baseline_arrow_back_24"
                    app:iconTint="@color/titulos"
                    android:onClick="goToMenu">

                </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>


                <com.shuhart.stepview.StepView
                    android:id="@+id/stepView"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:sv_doneCircleColor="@color/enfasis"
                    app:sv_doneCircleRadius="10dp"
                    app:sv_doneStepLineColor="@color/enfasis"
                    app:sv_doneStepMarkColor="@color/white"
                    app:sv_nextStepLineColor="@color/enfasis"
                    app:sv_nextTextColor="@color/enfasis"
                    app:sv_selectedCircleColor="@color/menu"
                    app:sv_selectedStepNumberColor="@color/titulos"
                    app:sv_selectedCircleRadius="15dp"
                    style="@style/StepView">

                </com.shuhart.stepview.StepView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearPedidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stepTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paso 1"
                    android:textColor="@color/titulos"
                    android:textSize="@dimen/titulos"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/stepDescriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="¡Ordena pedidos adicionales para agrandar tu compra!"
                    android:textColor="@color/titulos"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="end" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: "
                        android:textColor="@color/titulos"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 8000"
                        android:textColor="@color/titulos"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvEspecificacionPedido"
                    android:layout_gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Especificación del pedido"
                    android:textColor="@color/menu"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:gravity="center"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/addPlatanoAsado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/tarjetas"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center">

                                <ImageView
                                    android:onClick="decrementar"
                                    android:id="@+id/btnLess1add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/Button_add"
                                    android:src="@drawable/ic_baseline_horizontal_rule_24">
                                </ImageView>

                                <TextView
                                    android:id="@+id/numAdd1"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/titulos"
                                    android:textSize="20sp"
                                    android:gravity="center">
                                </TextView>

                                <ImageView
                                    android:onClick="incrementar"
                                    android:id="@+id/btnAdd1add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/Button_add"
                                    android:src="@drawable/ic_baseline_add_24">
                                </ImageView>

                            </LinearLayout>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="Platano amarillo asado"
                                android:textColor="@color/titulos"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 x $ 1.500"
                                android:textColor="@color/menu"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:src="@drawable/amarillo">

                        </de.hdodenhof.circleimageview.CircleImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/addSalsa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/tarjetas"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center">

                                <ImageView
                                    android:onClick="decrementar"
                                    android:id="@+id/btnLess2add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/Button_add"
                                    android:src="@drawable/ic_baseline_horizontal_rule_24">
                                </ImageView>

                                <TextView
                                    android:id="@+id/numAdd2"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/titulos"
                                    android:textSize="20sp"
                                    android:gravity="center">
                                </TextView>

                                <ImageView
                                    android:onClick="incrementar"
                                    android:id="@+id/btnAdd2add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/Button_add"
                                    android:src="@drawable/ic_baseline_add_24">
                                </ImageView>

                            </LinearLayout>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="Salsa picante"
                                android:textColor="@color/titulos"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 x $ 500"
                                android:textColor="@color/menu"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:src="@drawable/picante">

                        </de.hdodenhof.circleimageview.CircleImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/addPatacon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/tarjetas"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center">

                                <ImageView
                                    android:onClick="decrementar"
                                    android:id="@+id/btnLess3add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/Button_add"
                                    android:src="@drawable/ic_baseline_horizontal_rule_24">
                                </ImageView>

                                <TextView
                                    android:id="@+id/numAdd3"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/titulos"
                                    android:textSize="20sp"
                                    android:gravity="center">
                                </TextView>

                                <ImageView
                                    android:onClick="incrementar"
                                    android:id="@+id/btnAdd3add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/Button_add"
                                    android:src="@drawable/ic_baseline_add_24">
                                </ImageView>

                            </LinearLayout>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="Patacones recocheros (bañados en limón, sal y ajo)"
                                android:textColor="@color/titulos"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 x $ 1.500"
                                android:textColor="@color/menu"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:src="@drawable/patacon_tradicional">

                        </de.hdodenhof.circleimageview.CircleImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/addChorizo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/tarjetas"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center">

                                <ImageView
                                    android:onClick="decrementar"
                                    android:id="@+id/btnLess4add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/Button_add"
                                    android:src="@drawable/ic_baseline_horizontal_rule_24">
                                </ImageView>

                                <TextView
                                    android:id="@+id/numAdd4"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/titulos"
                                    android:textSize="20sp"
                                    android:gravity="center">
                                </TextView>

                                <ImageView
                                    android:onClick="incrementar"
                                    android:id="@+id/btnAdd4add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/Button_add"
                                    android:src="@drawable/ic_baseline_add_24">
                                </ImageView>

                            </LinearLayout>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="Chorizo"
                                android:textColor="@color/titulos"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 x $ 1.000"
                                android:textColor="@color/menu"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:src="@drawable/chorizo">

                        </de.hdodenhof.circleimageview.CircleImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>